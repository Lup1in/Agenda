<%- include('includes/head.ejs') %>
    <%- include('includes/nav.ejs') %>

        <div class="container">
            <div class="">
                <div class=""></div>

                <div class="">
                    <h1 class="agendaH1">Agenda</h1>
                    <p class="agendaP">Seus contatos estão abaixo.</p>

                    <%- include('includes/messages') %>

                        <% if(user) { %>
                            <div>
                                <table class="table-contatos">
                                    <% contatos.forEach(contato=> { %>
                                        <tr>
                                            <td>
                                                <%= contato.nome %>
                                            </td>
                                            <td>
                                                <%= contato.sobrenome %>
                                            </td>
                                            <td>
                                                <%= contato.telefone %>
                                            </td>
                                            <td>
                                                <%= contato.email %>
                                            </td>
                                            <td><a href="/contato/index/<%= contato._id%>">Editar</a></td>
                                            <td><a class="text-danger"
                                                    href="/contato/index/<%= contato.nome %>">Excluir</a>
                                            </td>
                                        </tr>
                                        <% }); %>
                                </table>
                            </div>
                            <% } else { %>
                                <p>Não existem contatos na sua agenda.</p>
                                <% } %>
                                    <div class=""></div>

                                    <%- include('includes/fotter.ejs'); %>